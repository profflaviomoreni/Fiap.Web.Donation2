@model ProdutoModel


<h1>Produto - Editar</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <form method="post" action="/Produto/Editar">
                    <input type="hidden" name="produtoId" value="@Model.ProdutoId" />
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" name="nome" value="@Model.Nome" class="form-control w-50" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Descrição:</label>
                        <input type="text" name="descricao" value="@Model.Descricao" class="form-control w-75" />
                    </div>
                    <!-- Itens Novos -->
                    <div class="form-group">
                        <input type="checkbox" checked="@Model.Disponivel" name="disponivel" class="form-check-input" />
                        <label class="form-check-label">Disponível</label>
                    </div>
                    <div class="form-group">
                        <label>Tipo ( @Model.TipoProdutoId ):</label>
                        <select asp-for="TipoProdutoId" asp-items="@ViewBag.TipoProdutos" class="form-control w-75">
                            <option value="0">Selecione</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sugestão de troca:</label>
                        <textarea name="SugestaoTroca" class="form-control w-75">@Model.SugestaoTroca</textarea>
                    </div>
                    <div class="form-group">
                        <label>Valor:</label>
                        <input type="number" name="valor" value="@Model.Valor" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Data da Expiração:</label>
                        <input type="text" name="DataExpiracao" value="@Model.DataExpiracao" class="form-control w-25" />
                    </div>
                    <!-- Fim Itens Novos -->

                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>
</div>